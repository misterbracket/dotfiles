[user]
	email = maximilian.klammer@gmail.com
	name = Max Klammer

[core]
	editor = nvim
  pager = delta
	excludesfile = /Users/maximilian.klammer/.gitignore

[init]
	defaultBranch = main

[push]
	autoSetupRemote = true

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
		line-numbers = true
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
